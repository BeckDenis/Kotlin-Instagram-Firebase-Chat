<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/from_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="18dp"
            android:layout_gravity="end"
            android:textSize="12sp"
            tools:text="16 Sep, 2:05 PM" />

        <TextView
            android:id="@+id/textview_from_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_chat_current_user"
            android:maxWidth="240dp"
            android:paddingStart="16dp"
            android:layout_marginTop="2dp"
            android:paddingTop="8dp"
            android:paddingEnd="26dp"
            android:paddingBottom="8dp"
            android:textColor="@android:color/black"
            tools:text="This is my message that will wrap into multiple lines and keep going" />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_chat_from_row"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/portrait_placeholder"/>

</LinearLayout>